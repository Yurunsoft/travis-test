#!/bin/bash

__DIR__=$(cd `dirname $0`; pwd)

cd $__DIR__/../

formatView(){
    echo "$(cmake --build build/test --target format 2>&1)" | while read row
    do
        echo $row
    done
}

formatApply(){
    cmake --build build/test --target fix-format
}

formatView

if [ $? != 0 ];then
    ./bin/pre-build-test
    formatView
fi

formatApply
